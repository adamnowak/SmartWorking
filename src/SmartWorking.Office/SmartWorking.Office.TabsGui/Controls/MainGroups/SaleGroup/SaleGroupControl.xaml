                                        <Binding Path="DeliveryNoteReportListViewModel.IsReadOnly" />
                                        <Binding Path="DeliveryNoteReportListViewModel.Items.SelectedItem.DeliveryNote.IsDeactive" />
                                    </MultiBinding.Bindings>
                                </MultiBinding>
                            </Button.Visibility>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
