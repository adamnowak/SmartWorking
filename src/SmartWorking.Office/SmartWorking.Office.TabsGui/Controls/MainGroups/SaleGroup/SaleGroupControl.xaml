<UserControl x:Class="SmartWorking.Office.TabsGui.Controls.MainGroups.SaleGroup.SaleGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Clients="clr-namespace:SmartWorking.Office.TabsGui.Controls.Clients" xmlns:Materials="clr-namespace:SmartWorking.Office.TabsGui.Controls.Materials" xmlns:ViewModel="clr-namespace:SmartWorking.Office.TabsGui.Shared.ViewModel" xmlns:Recipes="clr-namespace:SmartWorking.Office.TabsGui.Controls.Recipes" xmlns:Orders="clr-namespace:SmartWorking.Office.TabsGui.Controls.Orders" mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="7">
            <TextBlock Text="{Binding SelectedItem.Header, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabControl}}}"></TextBlock>
            <TextBlock Margin="10,0,0,0" Text="{Binding SelectedItem.Header, ElementName=ordersTabControl}"></TextBlock>
        </StackPanel>
        <TabControl Grid.Row="1" Style="{StaticResource verticalTabControl}" TabStripPlacement="Left" x:Name="ordersTabControl">
            <TabItem Header="str_DeliveryNotes">t3</TabItem>           
            <TabItem Header="{Binding Name}" DataContext="{Binding OrdersTabItemViewModel}">
                <Grid>
                    <GroupBox Header="str_Orders">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Orders:OrderListControl Grid.ColumnSpan="3" DataContext="{Binding OrderListViewModel}">
                                <Orders:OrderListControl.Visibility>
                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                        <MultiBinding.Bindings>
                                            <Binding Path="EditingViewModel.IsReadOnly" />
                                            <Binding Source="{StaticResource StaticTrue}"/>
                                            <Binding Source="{x:Static Visibility.Visible}" />
                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                        </MultiBinding.Bindings>
                                    </MultiBinding>
                                </Orders:OrderListControl.Visibility>
                            </Orders:OrderListControl>
                            <GroupBox Header="str_Wybierz klienta"  >
                                <GroupBox.Visibility>
                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                        <MultiBinding.Bindings>
                                            <Binding Path="OrderListViewModel.EditingViewModel.IsReadOnly" />
                                            <Binding Source="{StaticResource StaticFalse}"/>
                                            <Binding Source="{x:Static Visibility.Visible}" />
                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                        </MultiBinding.Bindings>
                                    </MultiBinding>
                                </GroupBox.Visibility>
                                <Grid>
                                    <Clients:ClientListControl DataContext="{Binding ClientListViewModel}" />
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="str_Wybierz budowe" Grid.Column="1" >
                                <GroupBox.Visibility>
                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                        <MultiBinding.Bindings>
                                            <Binding Path="OrderListViewModel.EditingViewModel.IsReadOnly" />
                                            <Binding Source="{StaticResource StaticFalse}"/>
                                            <Binding Source="{x:Static Visibility.Visible}" />
                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                        </MultiBinding.Bindings>
                                    </MultiBinding>
                                </GroupBox.Visibility>
                                <Grid DataContext="{Binding BuildingListViewModel}">
                                    <Clients:BuildingListControl  />
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="str_Wybierz receptę" Grid.Column="2"   >
                                <GroupBox.Visibility>
                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                        <MultiBinding.Bindings>
                                            <Binding Path="OrderListViewModel.EditingViewModel.IsReadOnly" />
                                            <Binding Source="{StaticResource StaticFalse}"/>
                                            <Binding Source="{x:Static Visibility.Visible}" />
                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                        </MultiBinding.Bindings>
                                    </MultiBinding>
                                </GroupBox.Visibility>
                                <Grid DataContext="{Binding RecipeListViewModel}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Recipes:RecipeListControl/>

                                </Grid>
                            </GroupBox>

                            <GroupBox Header="str_Wybrany klient" Grid.Row="1" >
                                <Grid>
                                    <Clients:ClientDetailsControl  DataContext="{Binding ClientDetailsViewModel.ClientComponentDetailsViewModel}"/>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="str_Wybrana budowa" Grid.Row="1" Grid.Column="1">
                                <Grid>
                                    <Clients:BuildingDetailsControl  DataContext="{Binding ClientDetailsViewModel.ClientComponentDetailsViewModel}"/>
                                </Grid>
                            </GroupBox>
                            <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition  />
                                    </Grid.RowDefinitions>

                                   
                                    <GroupBox Header="str_WybranaRecepta" DataContext="{Binding RecipeDetailsViewModel}">
                                        <Grid >
                                            <Recipes:RecipeDetailsControl />
                                        </Grid>
                                    </GroupBox>

                                
                                    <GroupBox Header="str_OrderDetails" Grid.Row="1" DataContext="{Binding RecipeDetailsViewModel}">
                                        <Grid >
                                            <Orders:OrderDetailsControl />
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            

                            <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding OrderListViewModel.AddItemCommand}" Content="str_Add">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                            <MultiBinding.Bindings>
                                                <Binding Path="OrderDetailsViewModel.IsReadOnly" />
                                                <Binding Source="{StaticResource StaticTrue}"/>
                                                <Binding Source="{x:Static Visibility.Visible}" />
                                                <Binding Source="{x:Static Visibility.Collapsed}" />
                                            </MultiBinding.Bindings>
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                                <Button Command="{Binding OrderListViewModel.AddCloneItemCommand}" Content="str_AddClone">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                            <MultiBinding.Bindings>
                                                <Binding Path="OrderDetailsViewModel.IsReadOnly" />
                                                <Binding Source="{StaticResource StaticTrue}"/>
                                                <Binding Source="{x:Static Visibility.Visible}" />
                                                <Binding Source="{x:Static Visibility.Collapsed}" />
                                            </MultiBinding.Bindings>
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                                <Button Command="{Binding OrderDetailsViewModel.EditItemCommand}" Content="str_Edit">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                            <MultiBinding.Bindings>
                                                <Binding Path="OrderDetailsViewModel.IsReadOnly" />
                                                <Binding Source="{StaticResource StaticTrue}"/>
                                                <Binding Source="{x:Static Visibility.Visible}" />
                                                <Binding Source="{x:Static Visibility.Collapsed}" />
                                            </MultiBinding.Bindings>
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                                <Button Command="{Binding OrderDetailsViewModel.SaveItemCommand}" Content="str_Save">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                            <MultiBinding.Bindings>
                                                <Binding Path="OrderDetailsViewModel.IsReadOnly" />
                                                <Binding Source="{StaticResource StaticFalse}"/>
                                                <Binding Source="{x:Static Visibility.Visible}" />
                                                <Binding Source="{x:Static Visibility.Collapsed}" />
                                            </MultiBinding.Bindings>
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                                <Button Command="{Binding OrderDetailsViewModel.CancelChangesCommand}" Content="str_Cancel">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                            <MultiBinding.Bindings>
                                                <Binding Path="OrderDetailsViewModel.IsReadOnly" />
                                                <Binding Source="{StaticResource StaticFalse}"/>
                                                <Binding Source="{x:Static Visibility.Visible}" />
                                                <Binding Source="{x:Static Visibility.Collapsed}" />
                                            </MultiBinding.Bindings>
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                                <Button Command="{Binding OrderListViewModel.DeleteItemCommand}" Content="str_Delete">
                                    <Button.Visibility>
                                        <MultiBinding Converter="{StaticResource visibilitisANDBinaryConverter}">
                                            <MultiBinding.Bindings>
                                                <Binding Path="MainViewModel.AccessLevel" Converter="{StaticResource enumBooleanConverter}" ConverterParameter="{x:Static ViewModel:AccessLevels.AdministratorLevel}" />
                                                <Binding Path="OrderDetailsViewModel.IsReadOnly" />
                                            </MultiBinding.Bindings>
                                        </MultiBinding>
                                    </Button.Visibility>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="{Binding Name}" DataContext="{Binding ClientsAndBuildingsTabItemViewModel}">
                <Grid>

                    <!--Clients-->
                    <GroupBox Header="str_Client" Grid.Row="0">
                        <Grid >

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <!--ClientsDetails-->
                            <GroupBox Header="str_ClientDetails" Grid.Column="0" >
                                <Grid >

                                    <Clients:ClientDetailsControl DataContext="{Binding ClientDetailsViewModel}"/>

                                </Grid>
                            </GroupBox>
                            <!--ClientList-->
                            <GroupBox Header="str_ClientList" Grid.Column="1"  DataContext="{Binding ClientListViewModel}" >
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Clients:ClientListControl/>

                                </Grid>
                            </GroupBox>
                            <Grid Grid.Row="1" Grid.ColumnSpan="2">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <GroupBox Header="Budowy klienta">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Clients:BuildingListControl DataContext="{Binding ClientDetailsViewModel.MaterialListToAddViewModel}" FiltersVisibility="Collapsed" />
                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                            <Button Command="{Binding ClientListViewModel.AddItemCommand}" Content="str_Add">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticTrue}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientListViewModel.AddCloneItemCommand}" Content="str_AddClone">
                                                <Button.Visibility>

                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticTrue}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientDetailsViewModel.EditItemCommand}" Content="str_Edit">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticTrue}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientDetailsViewModel.SaveItemCommand}" Content="str_Save">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticFalse}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientDetailsViewModel.CancelChangesCommand}" Content="str_Cancel">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticFalse}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientListViewModel.DeleteItemCommand}" Content="str_Delete">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource visibilitisANDBinaryConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="MainViewModel.AccessLevel" Converter="{StaticResource enumBooleanConverter}" ConverterParameter="{x:Static ViewModel:AccessLevels.AdministratorLevel}" />
                                                            <Binding Path="DriverDetailsViewModel.IsReadOnly" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>
                                <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center">
                                    <Button Content=">>"  />
                                    <Button Content="&lt;&lt;"  />
                                </StackPanel>
                                <GroupBox Grid.Column="2" Grid.ColumnSpan="2" Header="Wszystkie Budowy" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Clients:BuildingListControl Grid.RowSpan="2"  DataContext="{Binding ClientDetailsViewModel.ClientComponentListViewModel}"/>
                                        <Clients:BuildingDetailsControl Grid.Column="1" DataContext="{Binding ClientDetailsViewModel.ClientComponentDetailsViewModel}"/>
                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Command="{Binding ClientListViewModel.AddItemCommand}" Content="str_Add">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticTrue}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientListViewModel.AddCloneItemCommand}" Content="str_AddClone">
                                                <Button.Visibility>

                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticTrue}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientDetailsViewModel.EditItemCommand}" Content="str_Edit">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticTrue}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientDetailsViewModel.SaveItemCommand}" Content="str_Save">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticFalse}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientDetailsViewModel.CancelChangesCommand}" Content="str_Cancel">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ClientDetailsViewModel.IsReadOnly" />
                                                            <Binding Source="{StaticResource StaticFalse}"/>
                                                            <Binding Source="{x:Static Visibility.Visible}" />
                                                            <Binding Source="{x:Static Visibility.Collapsed}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding ClientListViewModel.DeleteItemCommand}" Content="str_Delete">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource visibilitisANDBinaryConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="MainViewModel.AccessLevel" Converter="{StaticResource enumBooleanConverter}" ConverterParameter="{x:Static ViewModel:AccessLevels.AdministratorLevel}" />
                                                            <Binding Path="DriverDetailsViewModel.IsReadOnly" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>

                            </Grid>
                        </Grid>
                    </GroupBox>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
