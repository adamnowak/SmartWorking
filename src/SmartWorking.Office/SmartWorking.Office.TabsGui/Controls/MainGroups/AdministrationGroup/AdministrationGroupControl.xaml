                                            </Button>
                                            <Button Command="{Binding RecipeDetailsViewModel.SaveItemCommand}" Content="{lex:LocText SmartWorking.Office.TabsGui:Resources:AdministrationGroupControl_Recipes_Save}">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource visibilitisANDBinaryConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="RecipeDetailsViewModel.IsReadOnly" Converter="{StaticResource boolToOppositeBoolConverter}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding RecipeDetailsViewModel.CancelChangesCommand}" Content="{lex:LocText SmartWorking.Office.TabsGui:Resources:AdministrationGroupControl_Recipes_Cancel}">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource visibilitisANDBinaryConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="RecipeDetailsViewModel.IsReadOnly" Converter="{StaticResource boolToOppositeBoolConverter}" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                            </Button>
                                            <Button Command="{Binding RecipeListViewModel.ChangeItemDeletedFlagCommand}" IsEnabled="{Binding IsReadOnly}">
                                                <Button.Visibility>
                                                    <MultiBinding Converter="{StaticResource visibilitisANDBinaryConverter}">
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="MainViewModel.AccessLevel" Converter="{StaticResource enumBooleanConverter}"
                                                                 ConverterParameter="{x:Static ViewModel:AccessLevels.AdministratorLevel}" />
                                                            <Binding Path="RecipeDetailsViewModel.IsReadOnly" />
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.Visibility>
                                                <Button.Content>
                                                    <MultiBinding Converter="{StaticResource comparingMultiConverter}">
                                                        <Binding Path="RecipeDetailsViewModel.Item.Recipe.IsDeleted" Converter="{StaticResource boolToOppositeBoolConverter}" />
                                                        <Binding Source="{StaticResource StaticFalse}" />
                                                        <Binding Source="{StaticResource StaticStringUndelete}" />
                                                        <Binding Source="{StaticResource StaticStringDelete}" />
                                                    </MultiBinding>
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>
                                        <GroupBox Header="{lex:LocText SmartWorking.Office.TabsGui:Resources:AdministrationGroupControl_Recipes_MaterialsInRecipe}"
                                             Grid.Column="2" Grid.RowSpan="2">
                                            <Recipes:RecipeComponentListControl FiltersVisibility="Collapsed" DataContext="{Binding RecipeDetailsViewModel.RecipeComponentListViewModel}" />
                                        </GroupBox>
                                    </Grid>
                                </GroupBox>
                                <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center">
                                    <Button Content="&lt;&lt;" Command="{Binding RecipeDetailsViewModel.AddMaterialCommand}" />
                                    <Button Content="&gt;&gt;" Command="{Binding RecipeDetailsViewModel.RemoveMaterialCommand}" />
                                </StackPanel>
                                <GroupBox Header="{lex:LocText SmartWorking.Office.TabsGui:Resources:AdministrationGroupControl_Recipes_AllMaterials}"
                                     Grid.Column="2">
                                    <Materials:MaterialListControl DataContext="{Binding RecipeDetailsViewModel.MaterialListToAddViewModel}"
                                         ListItemsFilterVisibility="Collapsed" />
                                </GroupBox>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>