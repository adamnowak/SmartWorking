<UserControl x:Class="SmartWorking.Office.TabsGui.Controls.Recipes.RecipeComponentDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:ViewModel="clr-namespace:SmartWorking.Office.TabsGui.Shared.ViewModel" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >
        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--Debug only-->
                <TextBlock Text="Id:" Grid.Row="0" Visibility="{Binding Path=MainViewModel.IsDebugMode, Converter={StaticResource enumVisibilityConverter}, ConverterParameter={StaticResource StaticTrue}}"/>
                <!--End Debug only-->
                <TextBlock Text="InternalName:" Grid.Row="1" />
                <TextBlock Text="str_Nazwa:" Grid.Row="2" />

                <TextBlock Text="InternalName producenta:" Grid.Row="3" />
                <TextBlock Text="str_Nazwa producenta:" Grid.Row="4" />

                <TextBlock Text="InternalName dostawcy:" Grid.Row="5" />
                <TextBlock Text="str_Nazwa dostawcy:" Grid.Row="6" />

                <TextBlock Text="str_Ilość na [m³]:" Grid.Row="7" />

                <!--End Debug only-->
                <TextBox IsReadOnly="True" Text="{Binding  Item.RecipeComponent.Id}" Grid.Row="0" Grid.Column="1" Visibility="{Binding Path=MainViewModel.IsDebugMode, Converter={StaticResource enumVisibilityConverter}, ConverterParameter={StaticResource StaticTrue}}"/>
                <!--Debug only DataContext="{Binding Material}"  -->
                <TextBox IsReadOnly="True" Text="{Binding Item.MaterialAndContractors.Material.InternalName}" Grid.Row="2" Grid.Column="1" />
                <TextBox IsReadOnly="True" Text="{Binding Item.MaterialAndContractors.Material.Name}" Grid.Row="1" Grid.Column="1" />

                <TextBox IsReadOnly="True" Text="{Binding Item.MaterialAndContractors.Producer.InternalName}" Grid.Row="3" Grid.Column="1" />
                <TextBox IsReadOnly="True" Text="{Binding Item.MaterialAndContractors.Producer.Name}" Grid.Row="4" Grid.Column="1" />

                <TextBox IsReadOnly="True" Text="{Binding Item.MaterialAndContractors.Deliverer.InternalName}" Grid.Row="5" Grid.Column="1" />
                <TextBox IsReadOnly="True" Text="{Binding Item.MaterialAndContractors.Deliverer.Name}" Grid.Row="6" Grid.Column="1" />

                <TextBox  IsReadOnly="{Binding IsReadOnly}" Text="{Binding Item.RecipeComponent.Amount}" Grid.Row="7" Grid.Column="1" />

            </Grid>

        </ScrollViewer>
    </Grid>
</UserControl>
