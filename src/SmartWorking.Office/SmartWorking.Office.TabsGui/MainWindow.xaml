<Window x:Class="SmartWorking.Office.TabsGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Cars="clr-namespace:SmartWorking.Office.TabsGui.Controls.Cars" Title="SmartWorking.Office (Tabs layout)" MinHeight="600" MinWidth="800">
    <Grid>
        <TabControl Style="{StaticResource horizontalMainTabControl}" x:Name="mainTabControl">
            <TabItem Header="Orders" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="7">
                        <TextBlock Text="{Binding SelectedItem.Header, ElementName=mainTabControl}"></TextBlock>
                        <TextBlock Margin="10,0,0,0" Text="{Binding SelectedItem.Header, ElementName=ordersTabControl}"></TextBlock>
                    </StackPanel>
                    <TabControl Grid.Row="1" Style="{StaticResource verticalTabControl}" TabStripPlacement="Left" x:Name="ordersTabControl">
                        <TabItem Header="ClientsAndBuildings">t1</TabItem>
                        <TabItem Header="Orders">t2</TabItem>
                        <TabItem Header="DeliveryNotes">t3</TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <TabItem Header="Reports">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="7">
                        <TextBlock Text="{Binding SelectedItem.Header, ElementName=mainTabControl}"></TextBlock>
                        <TextBlock Margin="10,0,0,0" Text="{Binding SelectedItem.Header, ElementName=reportsTabControl}"></TextBlock>
                    </StackPanel>
                    <TabControl Grid.Row="1" Style="{StaticResource verticalTabControl}"  TabStripPlacement="Left" x:Name="reportsTabControl">
                        <TabItem Header="DriversAndCars">t1</TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <TabItem Header="Administration">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="7">
                        <TextBlock Text="{Binding SelectedItem.Header, ElementName=mainTabControl}"></TextBlock>
                        <TextBlock Margin="10,0,0,0" Text="{Binding SelectedItem.Header, ElementName=administrationTabControl}"></TextBlock>
                    </StackPanel>
                    <TabControl Grid.Row="1" Style="{StaticResource verticalTabControl}"  TabStripPlacement="Left" x:Name="administrationTabControl">
                        <TabItem Header="DriversAndCars">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <!--Cars-->
                                <GroupBox Header="Cars" Grid.Row="0">
                                    <Grid >

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <!--CarsList-->
                                        <GroupBox Header="CarsList" Grid.Column="0">
                                            <Grid >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Cars:CarListControl/>
                                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                    <Button>Add</Button>
                                                    <Button>Delete</Button>
                                                </StackPanel>
                                            </Grid>
                                        </GroupBox>
                                        <!--CarsDetails-->
                                        <GroupBox Header="CarsDetails" Grid.Column="1">
                                            <Grid >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Cars:CarDetailsControl/>
                                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                                    <Button>Edit</Button>
                                                    <Button>Save</Button>
                                                    <Button>Cancel</Button>
                                                </StackPanel>
                                            </Grid>
                                        </GroupBox>
                                    </Grid>
                                </GroupBox>

                            </Grid>
                        </TabItem>
                        <TabItem Header="ProducersAndMaterials">t2</TabItem>
                        <TabItem Header="Recipes">t3</TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <TabItem Header="Settings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="7">
                        <TextBlock Text="{Binding SelectedItem.Header, ElementName=mainTabControl}"></TextBlock>
                        <TextBlock Margin="10,0,0,0" Text="{Binding SelectedItem.Header, ElementName=settingsTabControl}"></TextBlock>
                    </StackPanel>
                    <TabControl Grid.Row="1" Style="{StaticResource verticalTabControl}"  TabStripPlacement="Left" x:Name="settingsTabControl">
                        <TabItem Header="Users">t1</TabItem>
                        <TabItem Header="General">t2</TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
